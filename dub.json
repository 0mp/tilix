{
    "name": "terminix",
    "description": "A VTE based terminal emulator for Linux",
    "copyright": "Copyright Â© 2016, Gerald Nunn",
    "authors": ["Gerald Nunn"],
    "mainSourceFile": "source/app.d",

    "dependencies": {
        "gtk-d": "~>3.3.0"
    },

    "buildTypes": {
        "release": {
            "versions": ["StdLoggerDisableTrace"]
        },

        "localize": {
            "versions": ["Localize"]
        }
    },

    "configurations": [
        {
            "name": "default",
            "targetType": "executable",
            "libs-linux": ["X11"]
        },
        {
            "name": "dynamic",
            "targetType": "executable",
            "libs": ["gtkd-3"],
            "libs-linux": ["X11"],            
            "lflags": ["-defaultlib=gtkd-3.so"]
        }
    ]
}
